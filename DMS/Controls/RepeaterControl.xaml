<UserControl x:Class="DMS.RepeaterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMS"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border Margin="10" BorderThickness="1" BorderBrush="Black">
        <Grid>
            <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Name="Label" HorizontalContentAlignment="Center" FontWeight="Bold" Content="Placeholder" BorderBrush="Black" BorderThickness="0,0,0,1"/>
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                <Button Content="Add" Click="Add_Click"></Button>
                    <Button Content="Edit" Grid.Column="1" Click="Edit_Click"></Button>
                    <Button Content="Delete" Grid.Column="2" Click="Delete_Click"></Button>
                </Grid>
           <Grid Name="RepeaterGrid" />
        </StackPanel>
    </Grid>
    </Border>
</UserControl>
